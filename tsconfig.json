{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "target": "es5",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "jest", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["web/components/*"],
        "@utils/*": ["web/utils/*"],
        "@assets/*": ["web/assets"],
        "@models/*": ["web/models/*"],
        "@pages/*": ["web/pages/*"],
      }
    },
    "include": [
      "src",
      "tests"
    ],
    "exclude": [
      "node_modules"
    ]
  }