{
    "compilerOptions": {
      "allowJs": true,
      "target": "es5",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "strict": true,
      "paths": {
        "@/*": ["src/web/*"],
        "@asset/*": ["src/web/assets/*"]
      }
    },
    "include": [
      "src/web",
      "tests"
    ],
    "exclude": [
      "node_modules"
    ]
  }